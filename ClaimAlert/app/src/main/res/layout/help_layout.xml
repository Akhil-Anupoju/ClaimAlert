<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:paddingStart="20dp"
        android:paddingTop="30dp"
        android:background="@color/gray_help">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_500"
            android:clickable="false"
            android:foreground="@drawable/ic_baseline_add_24"
            app:borderWidth="0dp"
            app:elevation="0dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="20dp"
            android:text="Add a new item"
            android:textColor="#000000"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/layout_1"
        android:orientation="horizontal"
        android:id="@+id/layout_2"
        android:layout_marginTop="10dp"
        android:paddingStart="20dp"
        android:background="@color/gray_help">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/purple_500"
            android:clickable="false"
            android:foreground="@drawable/ic_baseline_settings_24"
            app:borderWidth="0dp"
            app:elevation="0dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add new categories, delete user-defined categories and select date format"
            android:textColor="#000000"
            android:textSize="22sp"
            android:paddingStart="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_3"
        android:orientation="horizontal"
        android:layout_below="@id/layout_2"
        android:padding="20dp"
        android:background="@color/gray_help">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_500"
            android:layout_marginTop="10dp"
            android:clickable="false"
            android:foreground="@drawable/ic_baseline_refresh_24"
            app:borderWidth="0dp"
            app:elevation="0dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="20dp"
            android:text="Refresh category &amp; item lists"
            android:textColor="#000000"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_3"
        android:layout_marginTop="10dp"
        android:background="@color/gray_help"
        android:orientation="horizontal"
        android:padding="20dp"
        android:id="@+id/layout_4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To delete an item or a category (including all items under it), long press and hold."
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- New LinearLayout with TextView added below -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_4"
        android:layout_marginTop="10dp"
        android:background="@color/gray_help"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click on the âžœ  item to add image and view it's details."
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>
